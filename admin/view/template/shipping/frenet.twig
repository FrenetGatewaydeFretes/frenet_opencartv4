{{ header }} {{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-frenet" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
         <li class="breadcrumb-item">
          <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
         </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times</button>
    </div>
    {% endif %}    
    <div class="card">
      <div class="card-header">
          <i class="fa-solid fa-pencil"></i>
          {{ text_edit }}
      </div>

      <div class="card-body">
        <form action="{{ action }}" method="post" id="form-frenet" data-oc-toggle="ajax">
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-postcode">{{ entry_postcode }}</label>
            <div class="col-sm-10">
              <input type="text" name="shipping_frenet_postcode" value="{{shipping_frenet_postcode }}" placeholder="{{ entry_postcode }}" id="input-postcode" class="form-control" />
              {% if  (error_postcode)  %} 
              <div class="text-danger">{{ error_postcode }}</div>
              {% endif %}
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-msg_prazo">{{ entry_msg_prazo }} </label>
            <div class="col-sm-10">
              <input type="text" name="shipping_frenet_msg_prazo" value="{{shipping_frenet_msg_prazo }}" placeholder="{{ help_msg_prazo }}" id="input-msg_prazo" class="form-control" />
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-contrato-token"><span data-toggle="tooltip" title="{{ help_frenet_token }} ">{{ entry_frenet_key }} </span></label>
            <div class="col-sm-10">
              <div class="row">
                <div class="col-sm-4">
                  <input type="text" name="shipping_frenet_contrato_token" value="{{shipping_frenet_contrato_token}}" placeholder="{{ entry_frenet_key_token }} " id="input-contrato-token" class="form-control" />
                </div>
                <div class="col-sm-4">
                </div>
              </div>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="shipping_frenet_status" id="input-status" class="form-control">
                {% if shipping_frenet_status %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="shipping_frenet_sort_order" value="{{ shipping_frenet_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}